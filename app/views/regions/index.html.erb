<ol class="breadcrumb breadcrumb-arrow">
	<li><%= link_to 'Home', root_path %></li>
	<li class="active"><span>College List</span></li>
</ol>
<div class="college_header">
  <div class="top_box">
    <h1 id="title_list">List of Colleges</h1>
    <p id="title_desc">
      Below is a list of colleges and universities, please contact us if your college or university is not listed.
    </p>
  </div>
</div>
<div class="container-fluid main-container">
  <div class="">

    <div class="">
      <div class="alert alert-warning container college-notice" role="alert">
        <h3 class="alert-heading"><strong>NOTICE!</strong></h3>
        <p class="mb-0 notice-text">Not all of the colleges in the country have been added, please enter your email below in order to get updates on your college.</p>
      </div>
      <div class="panel panel-default container">
        <h2 class="header_college">Georgia</h2><br />
        <div class="college_wrapper">
          <% @georgia_colleges.colleges.each do |college| %>
              <%= link_to college.name, region_college_path(@georgia_colleges, college), class: 'college_names ' %>
          <% end %>
        </div>
      </div>
      <div class="panel panel-default container">
        <h2 class="header_college">Maryland</h2><br />
        <div class="college_wrapper">
          <% @maryland_colleges.colleges.each do |college| %>
              <%= link_to college.name, region_college_path(@maryland_colleges, college), class: 'college_names ' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>