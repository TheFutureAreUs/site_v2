<h1 class="card-top-title">MY SERVICES</h1>
<div class="container">
  <div class="row">
    <section class="content">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="table-container">
              <div id="new_listing_button">
                <% if current_user.customer_id.present? %>
                  <%= link_to 'New Service', new_listing_path, class: "btn btn-info" %>
                <% else %>
                  <%= link_to 'New Service', new_charge_path, class: "btn btn-info" %>
                <% end %>
              </div>
              <table class="table table-filter">
                <tr>
                  <th class="mylistings-title" colspan="5">Title</th>
                </tr>
                <%= render @listings %>
              </table>
              <br />
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>