<%= javascript_include_tag 'listings.js' %>

<div class="banner parbase section">
  <section class="banner-component has-responsive-height has-background has-content-width-background">
    <div class="banner-background gradient blue-base"></div>
    <div class="banner-content content-margin">
      <div class="banner-content-container banner-content-align-center manual-content-position from-2 to-23">
          <p class="banner-headline headline-66">Create Service</p>
      </div>
    </div>
  </section>
</div>

<div class="some_pad">
    <div class="container">
        <div class="row">
            <div class="col col-md-2"></div>
            <div class="col col-md-8">
                <%= form_for(@listing) do |f| %>

                    <div class="form-group required">
                        <%= f.label "Company Name", class: "control-label" %><br />
                        <%= f.text_field :company_name, placeholder: "Ex:InfoSys", class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label "Description of Business", class: "control-label" %><br />
                        <%= f.text_area :company_details, rows: "3", class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label "Email Address", class: "control-label" %><br />
                        <%= f.email_field :emails_address, class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label "Phone Number", class: "control-label" %><br />
                        <%= f.telephone_field :phone_num, class: "form-control" %>
                    </div>
                    
                    <div class="form-group required">
                        <%= f.label "Purpose of Business", class: "control-label"%><br />
                        <%= f.text_area :description, rows: "8", class: "form-control" %>
                    </div>
          
                    <div class="form-group required">
                        <%= f.label :skills_needed, class: "control-label" %><br />
                        <%= f.text_area :skills_needed, rows: "4", class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label :category_id, class: "control-label" %><br />
                        <%= f.select :category_id, Category.all.map { |f| [f.name, f.id] }, class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label :region_id, class: "control-label" %><br />
                        <%= f.select :region_id, Region.all.map { |f| [f.name, f.id] }, class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label "School Name", class: "control-label" %><br />
                        <%= f.select :college_id, College.all.map { |f| [f.name, f.id] }, class: "form-control" %>
                    </div>

                    <div class="form-group required">
                        <%= f.label :address, class: "control-label" %>
                        <%= f.text_field :address, class: "form-control" %>
                    </div>

                    <ul class="media-date text-uppercase reviews list-inline">
                        <li class="list-group-items">
                            <div class="actions">
                              <%= f.submit "Submit", class: "btn btn-success" %>
                            </div>
                        </li>
                    </ul>
                <% end %>
            </div>
            <div class="col col-md-2"></div>    
        </div>
    </div>
</div>
