<div class="container">
  <div class="col-md-10 col-lg-6 text-xs-center col-md-offset-3">
    <div class="new-review">
      
        <h1 class="card-top-title">EDIT PROFILE</h1>
        <div class="form-horizontal">
                <%= form_for(@user, html: { multipart: true }) do |f| %>
                    <div class="form-group">
                    <%= f.label :avatar, class: 'col-md-4 control-label' %>
                    <div class="col-md-4">
                        <%= f.file_field :avatar %>
                    </div>
                    </div>
                    
                    <div class="form-group">
                    <%= f.label :username, class: 'col-md-4 control-label' %>
                    <div class="col-sm-6">
                        <%= f.text_field :username, autofocus: true,  class: "form-control input-md" %>
                    </div>
                    </div>
                    
                    <div class="form-group">
                    <%= f.label 'Occupation', class: 'col-md-4 control-label' %>
                        <div class="col-sm-6">
                        <%= f.text_field :occupation, autofocus: true,  class: "form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                    <%= f.label :description, class: 'col-md-4 control-label' %>
                    <div class="col-sm-6">
                        <%= f.text_area :description, class: "form-control" %>
                    </div>
                    </div>

                    <div class="form-group">
                    <div class="col-sm-6 text-xs-center control-label">
                        <%= f.submit "Save Changes", class: 'btn btn-info' %>
                    </div>
                    </div>
                <% end %>

            </div>

        </div>
        </div>
    </div>
  </div>
</div>